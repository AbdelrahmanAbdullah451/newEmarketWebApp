@model E_Market.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-success text-center">Delete Product</h2>

<div>

    <hr />

    <section class="container my-5 py-5 px-0">
        <div style="background-color :#eee" class="row align-items-center px-0">
            <div class="col-md-6">
                <img class="img-fluid" src="@Url.Content(Model.image)" />
            </div>
            <div class="col-md-6 ">
                <h3>@Html.DisplayFor(model => model.name)</h3>
                <h5 class="text-muted">$ @Html.DisplayFor(model => model.price)</h5>
                <span class="font-italic">phones</span>
                <p class="text-dark">
                    @Html.DisplayFor(model => model.description)
                </p>
            </div>
        </div>

    </section>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <h5 class="text-danger">Are you sure you want to delete this product ? </h5>
            <input type="submit" value="Yes , Delete" class="btn btn-info" /> |
            <a class="btn btn-dark  rounded" href="@Url.Action("Index" , "Products")">No , Back To Products</a>
        </div>
    }
</div>
